<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.dictionaryApp.controller.SettingPageController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Settings" style="-fx-font-size: 24px;"/>

    <Label fx:id="enterWordLabel" text="Enter word to add it to the dictionary"/>
    <TextField fx:id="getTheWordTextField" promptText="Enter the world to add"/>

    <Label fx:id="enterTranslationLabel" text="Enter translation of the entered world"/>
    <TextField fx:id="getTheTranslationTextField" promptText="Enter the translation to add"/>


    <Button text="Confirm adding" onAction="#handleConfirmAdding"/>

    <Button text="Go to previous page" onAction="#handleGoToFirstPage"/>

</VBox>
